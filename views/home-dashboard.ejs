<%- include('./include/header') %>
  <!-- header ends here -->
  <div class="trending">
  <div class="container py-md-2  container ">
    <%- include('include/flash')%>
    
    <% if (posts.length) {%>
    <h2 class="text-center hometitle">Newest Posts</h2>
       <div class="list-group">
    <% posts.forEach(function(post) { %>
    <a
      href="/post/<%= post._id %>"
      class="list-group-item littleDark list-group-item-action mb-2 border-secondary rounded "
    >
      <img class="avatar-tiny" src="<%= post.author.avatar %>" />
      <strong class="display-5"><%= post.title %></strong>
      <h6 class="pt-2"><%=post.body%></h6>
      
      
      <span class="text-muted small"
        > By <strong><%= post.author.username%> </strong>  on <%= post.createdDate.getMonth() +1%>/<%= post.createdDate.getDate()
        %>/<%= post.createdDate.getFullYear() %></span
      >
      <br>
      <strong class="mark">Total Vote Count: <%= post.vote%></strong>
    </a>
    <% }) %>
  </div>
      <% } else {%>
        <div class="text-center">
      <h2>Hello <strong>
        <%= user.username %>
      </strong>, your feed is empty.</h2>
      <p class="lead text-dark">Your feed displays the latest posts from the people you follow. If you don&rsquo;t have any friends to follow that&rsquo;s okay; you can use the &ldquo;Search&rdquo; feature in the top menu bar to find content written by people with similar interests and then follow them.</p>
    </div> 
      <% } %>


  </div>
</div>
  
  <!-- footer begins -->
<%- include('./include/footer') %>