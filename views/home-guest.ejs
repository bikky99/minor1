
<%- include('./include/header') %>
    <!-- header ends here -->

    <div class="container py-md-5">
       <%- include('include/flash')%>
      <div class="row align-items-center">
        <div class="col-lg-7 py-3 py-md-5">
          <h1 class="display-3">Tired of Unusual Event?</h1>
          <p class="lead text-dark">
            Are you sick of unexperienced event happening on University, Let's enjoy those event and upgrade ourself. ðŸ˜Š
          </p>
        </div>
        <div class="col-lg-5 pl-lg-5 pb-3 py-lg-5">
          <form action="/register" method="POST" id="registration-form">
            <% regErrors.forEach(function (message) { %>
            <div class="alert alert-danger small"><%= message %></div>
            <% }) %>

            <div class="form-group">
              <label for="username-register" class="text-dark mb-1"
                >Username</label
              >
              <input
                name="username"
                id="username-register"
                class="form-control"
                type="text"
                placeholder="Pick a username"
                autocomplete="off"
              />
            </div>

            <div class="form-group">
              <label for="email-register" class="text-dark mb-1"
                >Email</label
              >
              <input
                name="email"
                id="email-register"
                class="form-control"
                type="text"
                placeholder="you@example.com"
                autocomplete="off"
              />
            </div>

            <div class="form-group">
              <label for="password-register" class="text-dark mb-1"
                >Password</label
              >
              <input
                name="password"
                id="password-register"
                class="form-control"
                type="password"
                placeholder="Create a password"
              />
            </div>

            <button
              type="submit"
              class="py-3 mt-4 btn btn-lg btn-success btn-block"
            >
              Sign up for KoP
            </button>
          </form>
        </div>
      </div>
    </div>

    <!-- footer begins -->
    <%- include('./include/footer') %>